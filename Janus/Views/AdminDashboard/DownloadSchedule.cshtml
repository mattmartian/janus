@{
    ViewBag.Title = "ManageEmployees";
    Layout = "~/Views/Shared/_MainNavigationLayout.cshtml";
}
@model Janus.Models.PrintSchedViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Area | Pages</title>
</head>

<style>
    body {
        background: #f4f4f4;
    }

    /* Custom */
    .main-color-bg {
        background-color: #e4e57c !important;
        border-color: #e4e57c !important;
        color: #ffffff !important;
    }

    /* Header */
    #header {
        background: #333333;
        color: #ffffff;
        padding-bottom: 10px;
        margin-bottom: 15px;
    }

        #header .create {
            padding-top: 20px;
        }

    /* Breadcrumb */
    .breadcrumb {
        background: #cccccc;
        color: #333333;
    }

        .breadcrumb a {
            color: #333333;
        }

    /* Progress Bars */
    .progress-bar {
        background: #333333;
        color: #ffffff;
    }

    .dash-box {
        text-align: center;
    }

    #login {
        margin-top: 30px;
    }
</style>

<body>
    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a href="/AdminDashboard/AdminDashboard" class="list-group-item active main-color-bg">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                        </a>
                        <a href="@Url.Action("ManageEmployees", "AdminDashboard")" class="list-group-item"><span class="glyphicon glyphicon-list" aria-hidden="true"></span> Manage Employees </a>
                        <a href="@Url.Action("MakeSchedule", "AdminDashboard")" class="list-group-item"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Make Schedule </a>
                        <a href="@Url.Action("ManageRequests", "AdminDashboard")" class="list-group-item"><span class="glyphicon glyphicon-inbox" aria-hidden="true"></span> Manage Requests </a>
                        <a href="@Url.Action("ShiftManagement", "AdminDashboard")" class="list-group-item"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Shift Management </a>
                        <a href="@Url.Action("DownloadSchedule", "AdminDashboard")" class="list-group-item"><span class="glyphicon glyphicon-download" aria-hidden="true"></span> View/Download Schedule </a>
                    </div>
                </div>
                <div class="col-md-9">

                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Employees</h3>
                        </div>
                        <div class="panel-body">

                            <br>
                            <table class="table table-striped table-hover employeeTable">

                                <h2>Download This Week Schedule</h2>

                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(a => a.userID)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(a => a.shiftDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(a => a.shiftStart)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(a => a.shiftEnd)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(a => a.position)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (Janus.Models.PrintSchedViewModel item in ViewBag.data)
                                    {
                                        <tr>
                                            <td>
                                                @item.userID
                                            </td>
                                            <td>
                                                @item.day
                                            </td>
                                            <td>
                                                @item.shiftStart
                                            </td>
                                            <td>
                                                @item.shiftEnd
                                            </td>
                                            <td>
                                                @item.position
                                            </td>
                                        </tr>
                                    }

                                    <a class="btn btn-default popup" href="/AdminDashboard/SchedulePDF">Print This Weeks Schedule</a>
                                </table>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>