@{
    ViewBag.Title = "MakeSchedule";
    Layout = "~/Views/Shared/_MainNavigationLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Area | Pages</title>
    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    @Styles.Render("~/Content/AccountForm.css")
    <script src="http://cdn.ckeditor.com/4.6.1/standard/ckeditor.js"></script>
</head>

<style>
    body {
        background: #f4f4f4;
    }

    /* Custom */
    .main-color-bg {
        background-color: #e74c3c !important;
        border-color: #c0392b !important;
        color: #ffffff !important;
    }

    /* Header */
    #header {
        background: #333333;
        color: #ffffff;
        padding-bottom: 10px;
        margin-bottom: 15px;
    }

        #header .create {
            padding-top: 20px;
        }

    /* Breadcrumb */
    .breadcrumb {
        background: #cccccc;
        color: #333333;
    }

        .breadcrumb a {
            color: #333333;
        }

    /* Progress Bars */
    .progress-bar {
        background: #333333;
        color: #ffffff;
    }

    .dash-box {
        text-align: center;
    }

    #login {
        margin-top: 30px;
    }
</style>
<body>
    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a href="/AdminDashboard/AdminDashboard" class="list-group-item active main-color-bg">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                        </a>
                        <a href="/AdminDashboard/ManageEmployees/" class="list-group-item"><span class="glyphicon glyphicon-list" aria-hidden="true"></span> Manage Employees </a>
                        <a href="/AdminDashboard/MakeSchedule/" class="list-group-item"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Make Schedule </a>
                        <a href="/AdminDashboard/ManageRequests/" class="list-group-item"><span class="glyphicon glyphicon-inbox" aria-hidden="true"></span> Manage Requests </a>
                        <a href="/AdminDashboard/ShiftManagement/" class="list-group-item"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Shift Management </a>
                        <a href="/AdminDashboard/DownloadSchedule/" class="list-group-item"><span class="glyphicon glyphicon-download" aria-hidden="true"></span> View/Download Schedule </a>
                    </div>
                </div>
                <div class="col-md-9">
                    <!-- Website Overview -->
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Create Schedule</h3>
                        </div>
                        <div class="panel-body">

                            <br>
                            <table class="table table-striped table-hover">
                                @using (Html.BeginForm("AddSchedule", "AdminDashboard", FormMethod.Post))
                                {
                                    <form>
                                        @Html.AntiForgeryToken()

                                        <h1>Make Schedule</h1>
                                        <center>
                                            <fieldset>
                                                <label for="employee">Employee:</label>
                                                <select name="employees">
                                                    <option value="null"> -- Please Select An Employee --</option>
                                                    @foreach (Janus.Models.EmployeeDetailViewModel item in ViewBag.data)
                                                    {
                                                        <option value="@item.userID">@item.lastName , @item.firstName</option>
                                                    }
                                                </select>
                                                <br />
                                                <label for="day">Day:</label>
                                                <select name="day">
                                                    <option value="Sunday">Sunday</option>
                                                    <option value="Monday">Monday</option>
                                                    <option value="Tuesday">Tuesday</option>
                                                    <option value="Wednesday">Wednesday</option>
                                                    <option value="Thursday">Thursday</option>
                                                    <option value="Friday">Friday</option>
                                                    <option value="Saturday">Saturday</option>
                                                </select>
                                                <br />
                                                <label for="startTime">Start Time:</label>
                                                <select name="startTime">

                                                    @for (int i = 0; i < 25; i++)
                                                    {
                                                        @:
                                                        <option value="@i">@i:00</option>
                                                    }
                                                </select>
                                                <br />
                                                <label for="endTime">End Time:</label>
                                                <select name="endTime">

                                                    @for (int i = 0; i < 25; i++)
                                                    {
                                                        @:
                                                        <option value="@i">@i:00</option>
                                                    }
                                                </select>
                                                <br />
                                                <label for="position">Position:</label>
                                                <input type="text" id="position" name="posiiton" />
                                                <br />
                                                <label for="description">Description:</label>
                                                <input type="text" id="description" name="description" />
                                            </fieldset>
                                        </center>
                                        <button name="submit" type="submit" id="login">Create</button>
                                    </form>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>