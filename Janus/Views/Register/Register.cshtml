
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-4 col-md-4">
        </div>
        <div class="col-xs-4 col-md-4 text-center">
            <img src="/Content/Images/logo.png" height="225" width="250" style="margin-left: 6em;" />
            @using (Html.BeginForm(FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <fieldset style="width: 500px">
                    <legend>Create Account</legend>
                    <p>
                        <label for="firstName">First Name:</label>
                        @Html.TextBoxFor(model => model.Users.)
                       <!-- <%= Html.ValidationMessage("firstName", "*")%>-->
                    </p>

                    <p>
                        <label for="lastName">Last Name:</label>
                       @Html.TextBox("lastName")
                        <!-- <%= Html.ValidationMessage("firstName", "*")%>-->
                    </p>

                    <p>
                        <label for="streetAddress">Address:</label>
                        @Html.TextBox("streetAddress")
                        <!-- <%= Html.ValidationMessage("firstName", "*")%>-->
                    </p>

                    <p>
                        <label for="postalCode">Postal Code:</label>
                        @Html.TextBox("postalCode")
                        <!-- <%= Html.ValidationMessage("firstName", "*")%>-->
                    </p>

                    <p>
                        <label>Company: @Html.DropDownList("companylist", ViewData["comapnylist"] as SelectList) </label>
                    </p>

                    <p>
                        <label>Manager: @Html.DropDownList("companylist", ViewData["comapnylist"] as SelectList) </label>
                    </p>



                    <p>
                        <label for="Password">Password:</label>
                        @Html.Password("*")
                      
                    </p>

                    <p>
                        <label for="Confirm">Confirm Password:</label>
                        @Html.Password("*")
                        <!-- <%= Html.ValidationMessage("firstName", "*")%>-->
                    </p>


                    <!-- MAKE THIS INTO A PARTIAL VIEW-->
                    <p>
                        <label>Security Question:@Html.DropDownList("questionList", ViewData["questionList"] as SelectList) </label>

                      
                    </p>

                    <p>
                        <label for="securityAnswer">Answer:</label>
                        @Html.TextBox("securityAnswer", "answer")
                    </p>
                    
                    <p>
                        <input type="submit" value="Create Account" />
                    </p>
                </fieldset>
            }

        
        </div>
        <div class="col-xs-4 col-md-4 text-right">
        </div>
    </div>
</div>

