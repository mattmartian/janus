@{
    ViewBag.Title = "VerifyAccount";
    Layout = "~/Views/Shared/_AccountFormLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-4 col-md-4">
        </div>
        <div class="col-xs-4 col-md-4 text-center">
            <img src="/Content/Images/logo.png" height="225" width="250" style="margin-left: 6em;" />
            @using (Html.BeginForm("VerifyEmail", "Recovery", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <form>

                    <h1>Verify Account</h1>

                    <fieldset>

                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required />
                    </fieldset>

                    <button name="submit" type="submit">Verify Email</button>
                </form>
            }
        </div>
        <div class="col-xs-4 col-md-4 text-right">
        </div>
    </div>
</div>