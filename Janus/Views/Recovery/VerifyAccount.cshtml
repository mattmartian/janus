@{
    ViewBag.Title = "VerifyAccount";
    Layout = "~/Views/Shared/_AccountFormLayout.cshtml";
}

<div class="container">
    <div class="row">

        <div class="col-xs-12 col-md-12 text-center">
            <img src="~/Content/Images/logotext.png" height="225" width="250" />
            @using (Html.BeginForm("VerifyEmail", "Recovery", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <form>

                    <div style="background-color:#008982;">
                        <h1 style="color:white; padding-bottom:10px; padding-top:10px;">Verify Account</h1>
                    </div>

                    <fieldset>

                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required />
                    </fieldset>

                    <button name="submit" type="submit">Verify Email</button>
                </form>
            }
        </div>
    </div>
</div>