@{
    ViewBag.Title = "VerifyAccount";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-4 col-md-4">
        </div>
        <div class="col-xs-4 col-md-4 text-center">
            <img src="/Content/Images/logo.png" height="225" width="250" style="margin-left: 6em;" />
            @using (Html.BeginForm("VerifyEmail", "Recovery", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <fieldset style="width: 400px">
                    <legend>Enter Your Email</legend>
                    <p>
                        <label for="email">Email:</label>
                        <input placeholder="Your Email" type="email" id="email" name="email" required />
                        <!-- <%= Html.ValidationMessage("firstName", "*")%>-->
                    </p>

                    <button name="submit" type="submit" id="contact-submit">Verify Email</button>
                </fieldset>
            }
        </div>
        <div class="col-xs-4 col-md-4 text-right">
        </div>
    </div>
</div>