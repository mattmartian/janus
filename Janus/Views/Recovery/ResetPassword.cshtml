@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_AccountFormLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-4 col-md-4">
        </div>
        <div class="col-xs-4 col-md-4 text-center">
            <img src="~/Content/Images/logotext.png" height="225" width="250" />

            <div>
                <p>@ViewBag.Error</p>
            </div>
            @using (Html.BeginForm("PasswordReset", "Recovery", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <form>

                    <h1>Reset Password</h1>

                    <fieldset>

                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required />

                        <label for="newpassword">New Password:</label>
                        <input type="password" id="newpassword" name="newpassword" required />

                        <label for="confirmnewpassword">Confirm New Password:</label>
                        <input type="password" id="confirmnewpassword" name="confirmnewpassword" required />
                    </fieldset>

                    <button name="submit" type="submit">Reset Password</button>
                </form>
            }
        </div>
        <div class="col-xs-4 col-md-4 text-right">
        </div>
    </div>
</div>