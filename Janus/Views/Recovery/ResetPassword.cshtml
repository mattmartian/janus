@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-4 col-md-4">
        </div>
        <div class="col-xs-4 col-md-4 text-center">
            <img src="/Content/Images/logo.png" height="225" width="250" style="margin-left: 6em;" />

            <div>
                <p>@ViewBag.Error</p>
            </div>
            @using (Html.BeginForm("PasswordReset", "Recovery", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <fieldset style="width: 400px">
                    <legend>Reset Your Password</legend>

                    <p>
                        <label for="newpass">New Password:</label>
                        <input placeholder="New Password" type="password" id="newpassword" name="newpassword" required />
                        <!-- <%= Html.ValidationMessage("firstName", "*")%>-->
                    </p>

                    <p>
                        <label for="confirmnewpass">Confirm New Password:</label>
                        <input placeholder="Confirm New Password" type="password" id="confirmnewpassword" name="confirmnewpassword" required />
                        <!-- <%= Html.ValidationMessage("firstName", "*")%>-->
                    </p>

                    <p>
                        <input type="submit" value="Reset Password" />
                    </p>
                </fieldset>
            }
        </div>
        <div class="col-xs-4 col-md-4 text-right">
        </div>
    </div>
</div>